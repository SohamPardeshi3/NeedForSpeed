<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".choose_niche">

    <ImageView
        android:layout_width="262dp"
        android:layout_height="120dp"
        android:background="@drawable/nfs"
        android:layout_centerHorizontal="true"
        android:id="@+id/Nfslogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Nfslogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="84dp"
        android:paddingTop="50dp"
        android:text="Choose Niche: "
        android:textColor="@color/colorAccent"
        android:textSize="34dp"
        android:textStyle="bold"
        android:id="@+id/ChooseNiche"/>

    <ImageButton
        android:id="@+id/FarmerButton"
        android:layout_width="298dp"
        android:layout_height="193dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ChooseNiche"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/farmer"
        android:onClick="Farmer" />

    <ImageButton
        android:layout_width="298dp"
        android:layout_height="193dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FarmerButton"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/wholesaler"
        android:onClick="wholesaler" />

</RelativeLayout>